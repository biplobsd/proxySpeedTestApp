                                else:\
                                app.listSel.open(); \
                                self.custom_color = get_color_from_hex(colors[app.theme_cls.primary_palette]["800"])
                    MDBoxLayout:
                        adaptive_height: True
                        padding: 10, 15, 10, 10
                        id: header_text
                        MDBoxLayout:
                            size_hint_x: .5
                            size_hint_y: .1
                            MDSeparator:
                            MDTextButton:
                                pos_hint: {"center_y": .5, "center_x": .5}
                                font_size: sp(10)
                                custom_color: get_color_from_hex(colors[app.theme_cls.primary_palette]["200"])
                                text: "SERVER"
                                active: False
                                on_release:
                                    app.sort_Change(self, backdrop_front_layer.data)
                            MDSeparator:
                        MDBoxLayout:
                            # size_hint_x: 1
                            MDBoxLayout:
                                # size_hint_x: .3
                                size_hint_y: .1
                                MDSeparator:
                                MDTextButton:
                                    pos_hint: {"center_y": .5, "center_x": .5}
                                    font_size: sp(10)
                                    custom_color: get_color_from_hex(colors[app.theme_cls.primary_palette]["200"])
                                    text: "TOP3-%"
                                    active: False
                                    on_release:
                                        app.sort_Change(self, backdrop_front_layer.data)
                                MDSeparator:
                            MDBoxLayout:
                                # size_hint_x: .3
                                size_hint_y: .1
                                MDSeparator:
                                MDTextButton:
                                    pos_hint: {"center_y": .5, "center_x": .5}
                                    font_size: sp(10)
                                    custom_color: get_color_from_hex(colors[app.theme_cls.primary_palette]["200"])
                                    text: "SIZE"
                                    active: False
                                    on_release:
                                        app.sort_Change(self, backdrop_front_layer.data)
                                MDSeparator:
                            MDBoxLayout:
                                # size_hint_x: .3
                                size_hint_y: .1
                                MDSeparator:
                                MDTextButton:
                                    pos_hint: {"center_y": .5, "center_x": .5}
                                    font_size: sp(10)
                                    custom_color: get_color_from_hex(colors[app.theme_cls.primary_palette]["200"])
                                    text: "TIME"
                                    active: False
                                    on_release:
                                        app.sort_Change(self, backdrop_front_layer.data)
                                        

                                MDSeparator:
                            MDBoxLayout:
                                # size_hint_x: .3
                                size_hint_y: .1
                                MDSeparator:
                                MDTextButton:
                                    pos_hint: {"center_y": .5, "center_x": .5}
                                    font_size: sp(10)
                                    custom_color: get_color_from_hex(colors[app.theme_cls.primary_palette]["200"])
                                    text: "SPEED"
                                    active: False
                                    on_release:
                                        app.sort_Change(self, backdrop_front_layer.data)
                                MDSeparator:
                    KitchenSinkBackdropFrontLayer:
                        id: backdrop_front_layer
                        backdrop: backdrop
                        backlayer: backlayer
                    MDBoxLayout:
                        size: 1, 1
                        size_hint: 1, None
                        padding: 0, 0, 10, 30
                        orientation: "vertical"
                        MagicButton:
                            id: start_stop
                            pos_hint: {"x": (Window.width-self.width*1.5)/Window.width}
                            text_color: get_color_from_hex(colors[app.theme_cls.primary_palette]["100"])
                            icon: "play"
                            elevation_normal: 12
                            on_release:
                                self.wobble()
                                app.start_scan(self)
                            
                                
                    # MDBoxLayout:
                    #     id: adsShow
                    #     size_hint: None, None
                    #     size: 0, 0
                        
                        
        Screen:
            name: "shrine demo"
            on_enter: app.show_demo_shrine(self)
            on_leave:
                backlayer.ids.screen_manager.current = "settings"
                self.clear_widgets()

<MagicButton@MagicBehavior+MDFloatingActionButton>

<ProxyShowList>
    size_hint_y: None
    divider: "Full"
    on_enter: self._enter(root)
    on_leave: self._leave(root)
    canvas:
        Color:
            rgba:
                self.theme_cls.divider_color if root.divider is not None\
                else (0, 0, 0, 0)
        Line:
            points: (root.x ,root.y, root.x+self.width, root.y) if root.divider == 'Full' else (root.x+root._txt_left_pad, root.y, root.x+self.width-root._txt_left_pad-root._txt_right_pad, root.y)
        Color:
            rgba: root.bg_color if root.bg_color else (0, 0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        id: _text_container
        # orientation: 'vertical'
        adaptive_height: True
        # padding: 10
        pos: root.pos
        padding:
            root._txt_left_pad, root._txt_top_pad,\
            root._txt_right_pad, root._txt_bot_pad
        MDBoxLayout:
            size_hint_x: .5
            # size_hint_y: .1
            MDLabel:
                text: root.text
                font_style: root.font_style
                halign: "center"
                theme_text_color: root.theme_text_color
                text_color: root.text_color
                size_hint_y: None
                # size_hint_x: .68
                height: self.texture_size[1]
                shorten_from: 'right'
                shorten: True
        MDBoxLayout:
            MDLabel:
                text: root.text1
                font_style: root.font_style
                halign: "center"
                theme_text_color: root.theme_text_color
                text_color: root.text_color
                size_hint_y: None
                # size_hint_x: .3
                height: self.texture_size[1]
                shorten_from: 'right'
                shorten: True
            MDLabel:
                text: root.text2
                font_style: root.font_style
                halign: "center"
                theme_text_color: root.theme_text_color
                text_color: root.text_color
                size_hint_y: None
                # size_hint_x: .3
                height: self.texture_size[1]
                shorten_from: 'right'
                shorten: True
            MDLabel:
                text: root.text3
                font_style: root.font_style
                halign: "center"
                theme_text_color: root.theme_text_color
                text_color: root.text_color
                size_hint_y: None
                # size_hint_x: .2
                height: self.texture_size[1]
                shorten_from: 'right'
                shorten: True
            MDLabel:
                text: root.text4
                font_style: root.font_style
                halign: "center"
                theme_text_color: root.theme_text_color
                text_color: root.text_color
                size_hint_y: None
                # size_hint_x: .2
                height: self.texture_size[1]
                shorten_from: 'right'
                shorten: True
<KitchenSinkBackdropFrontLayer@RecycleView>
    backdrop: None
    backlayer: None
    key_viewclass: 'viewclass'
    key_size: 'height'
    RecycleBoxLayout:
        padding: 10, 0, 10, 0
        default_size: None, dp(20)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<PSTBackdropBackLayer>
    scale_x: 0
    scale_y: 0
    backdrop: None
    root_screen_manager: None

    Image:
        canvas.before:
            PushMatrix
            Scale:
                origin: self.center
                x: root.scale_x
                y: root.scale_y
        canvas.after:
            PopMatrix

        opacity: .2
        source: f"{os.environ['KITCHEN_SINK_ASSETS']}icon.png"
        pos_hint: {"center_y": .55}

    ScreenManager:
        id: screen_manager
        transition: FadeTransition(duration=.2, clearcolor=(0, 0, 0, 0))

        Screen:
            name: "settings"
            ScrollView:

                MDGridLayout:
                    adaptive_height: True
                    cols: 1
                    padding: "10dp"
                    spacing: "10dp"

                    MDBoxLayout:
                        orientation: "vertical"
                        adaptive_height: True
                        padding: "5dp"
                        spacing: "10dp"

                        MDLabel:
                            text: "Change Style"
                            bold: True
                            theme_text_color: "Primary"

                        MDBoxLayout:
                            size_hint: None, None
                            adaptive_size: True
                            spacing: "30dp"

                            MDCheckbox:
                                group: "style"
                                size_hint: None, None
                                size: "48dp", '48dp'
                                active: True if app.theme_cls.theme_style == "Light" else False
                                on_active:
                                    if self.active: app.changeThemeMode("Light")
                                    root.backdrop.ids._front_layer.md_bg_color = [0, 0, 0, 0]

                            Label:
                                text: "Light"
                                color: app.theme_cls.text_color

                            MDCheckbox:
                                group: "style"
                                size_hint: None, None
                                size: "48dp", '48dp'
                                active: True if app.theme_cls.theme_style == "Dark" else False
                                on_active:
                                    if self.active: app.changeThemeMode("Dark")
                                    root.backdrop.ids._front_layer.md_bg_color = [0, 0, 0, 0]

                            Label:
                                text: "Dark"
                                color: app.theme_cls.text_color

                    MDSeparator:
                    MDLabel:
                        text: "Input"
                        bold: True
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        
                    KitchenSinkOneLineIconListItem:
                        text: "Input mirror list"
                        icon: "vector-polyline-plus"
                        divider: None
                        on_release:
                            if root.backdrop._front_layer_open: MirrorDialogInput(app).open() 
                            

                    KitchenSinkOneLineIconListItem:
                        text: "Input proxy list"
                        icon: "database-plus"
                        divider: None
                        on_release: PSTDialogInput().open()
                    
                    MDSeparator:
                    MDLabel:
                        text: "Remove"
                        bold: True
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        
                    KitchenSinkOneLineIconListItem:
                        text: "Remove proxy list"
                        icon: "database-minus"
                        divider: None
                        on_release: proxysDialogRemove(app).open()

                    MDSeparator:
                    MDLabel:
                        text: "Proxys settings"
                        bold: True
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]
                    KitchenSinkOneLineIconListItem:
                        text: f"Timeout : {app.configs['timeout']} seconds"
                        icon: "timelapse"
                        divider: None
                        on_release: TimeoutSet(self).open()
                    KitchenSinkOneLineIconListItem:
                        text: f"Filesize : {size(app.configs['fileSize'])}"
                        icon: "cloud-download-outline"
                        divider: None
                        on_release: FilesizeSet(self).open()
                    KitchenSinkOneLineIconListItem:
                        id: Smirror
                        text: f"Mirror: {parse.urlparse(app.configs['mirror']).netloc}"
                        icon: "transit-connection-variant"
                        divider: None
                        on_release: 
                            if (len(app.configs['proxysInx']) == 0):\
                            toast("First input proxys ip:port list then select mirrors.")
                            else:app.mirrSel.open()
                    MDSeparator:
                    MDLabel:
                        id: label_theme
                        text: "About Us"
                        bold: True
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]

                    KitchenSinkOneLineIconListItem:
                        text: "Developers"
                        icon: "dev-to"
                        divider: None
                        on_release: KitchenSinkDialogDev().open()

                    KitchenSinkOneLineIconListItem:
                        text: "License"
                        icon: "license"
                        divider: None
                        on_release: KitchenSinkDialogLicense().open()
                    
                    MDBoxLayout:
                        adaptive_height: True
                        orientation: "vertical"
                        MDTextButton:
                            pos_hint: {"center_y": .5, "center_x": .5}
                            font_size: sp(10)
                            custom_color: get_color_from_hex(colors[app.theme_cls.primary_palette]["200"])
                            text: f"VERSION : {app.version}"
                            on_release:app.checkUpdates(True)
                    Widget:
                        size_hint_y: None
                        height: app.theme_cls.standard_increment
