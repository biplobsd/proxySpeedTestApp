                        padding: 10, 0, 10, 0
                        # spacing: 4
                        orientation: "vertical"
                        MDProgressBar:
                            id: progressBar1
                            max: 1024
                            value: 0
                        MDProgressBar:
                            id: progressBar2
                            max: 1024
                            value: 0
                        MDProgressBar:
                            id: progressBar3
                            max: 1024
                            value: 0
                    MDBoxLayout:
                        # size_hint: None, None
                        # size: root.width, '48dp'
                        size_hint_y: .1
                        padding: 20, 0, 20, 0
                        orientation: "horizontal"
                        #size_hint_y: .5
                        #pos_hint: {"center_y": .5}
                        id: header_text
                        MDTextButton:
                            id: Sprotocol
                            # size_hint: 1, None
                            font_style: "Overline"
                            # size_hint_y: 1
                            width: dp(85+len(self.text))
                            pos_hint: {"center_y": .5, "center_x": .5}
                            custom_color: get_color_from_hex(colors[app.theme_cls.primary_palette]["300"])
                            on_release:
                                if (len(app.configs['proxys']) == 0):\
                                toast("First input proxys ip:port list then select protocol.")
                                elif start_stop.icon in ['stop', 'blur']:\
                                toast("Please stop scan first then choices protocol")
                                else:\
                                app.protSel.open(); \
                                self.custom_color = get_color_from_hex(colors[app.theme_cls.primary_palette]["800"])
                        MDLabel:
                            id: Tproxys
                            # size_hint: None, None
                            # size_hint: 1, 1
                            # pos_hint: {"center_y": .5}
                            font_style: "Overline"
                            halign: "center"
                            theme_text_color: "Hint"
                        MDLabel:
                            id: Tscan
                            # size_hint: None, None
                            # size_hint: 1, 1
                            # pos_hint: {"center_y": .5}
                            font_style: "Overline"
                            halign: "center"
                            theme_text_color: "Hint"
                        MDTextButton:
                            id: Slist
                            # size_hint: 1, None
                            # text: "List"
                            halign: "right"
                            font_style: "Overline"
                            size_hint_y: 1
                            width: dp(85+len(self.text))
                            custom_color: get_color_from_hex(colors[app.theme_cls.primary_palette]["300"])
                            on_release:
