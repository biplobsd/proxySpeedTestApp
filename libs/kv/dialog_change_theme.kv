<KitchenSinkBaseDialog>:
    background: f"{images_path}/transparent.png"
    canvas:
        Color:
            rgba: root.theme_cls.bg_dark
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]


<KitchenSinkDialogDev>:
    size_hint: None, None
    height: Window.height * 60 / 100
    width: Window.width * 90 / 100

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "10dp", "10dp", "10dp", "10dp"

        MDLabel:
            text: "Developers"
            halign: "center"
            theme_text_color: "Custom"
            text_color: self.theme_cls.primary_color
            font_style: "H4"
            bold: True
            size_hint_y: None
            height: self.texture_size[1]

        MDSeparator:

        ScrollView:
            bar_width: 0

            MDGridLayout:
                cols: 1
                adaptive_height: True
                padding: "10dp"

                KitchenSinkTwoLineLeftAvatarItem:
                    icon: f'{os.environ["KITCHEN_SINK_ASSETS"]}biplob-sd.png'
                    secondary_text: "https://github.com/biplobsd"
                    text: "Biplob SD"

<PSTDialogInput>:
    size_hint: None, None
    height: Window.height * 70 / 100
    width: Window.width * 90 / 100

    BoxLayout:
        orientation: "vertical"
        spacing: "15dp"
        padding: "10dp"

        MDLabel:
            text: "Input proxys".upper()
            halign: "center"
            theme_text_color: "Custom"
            text_color: self.theme_cls.primary_color
            font_style: "H4"
            bold: True
            size_hint_y: None
            height: self.texture_size[1]

        MDSeparator:

        MDTextFieldRect:
            id: query
            hint_text: "Rectangle mode"
            pos_hint: {"center_x": 0.5}
            hint_text: "ip:proxy\n.."
            mode: "fill"
            size_hint: .9, 1
        
        MDSeparator:

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            # padding: "5dp"
            # spacing: "10dp"

            MDLabel:
                text: "Select protocol"
                bold: True
                theme_text_color: "Primary"
            
            MDBoxLayout:
                adaptive_height: True
                MDBoxLayout:
                    size_hint: .4, None
                    # size: 75, 1
                    adaptive_height: True
                    MDCheckbox:
                        id: pro_http
                        group: "style_protocol"
                        size_hint: None, None
                        size: "48dp", '48dp'
                        on_active:
                            if self.active: root.piced_pro = 'http'
                            else: root.piced_pro = None

                    MDLabel:
                        text: "HTTP"
                        # halign: 'center'
                        font_style: "Overline"
                        color: app.theme_cls.text_color

                MDBoxLayout:
                    size_hint: .4, None
                    # size: 80, 1
                    adaptive_height: True
                    MDCheckbox:
                        id: pro_https
                        group: "style_protocol"
                        size_hint: None, None
                        size: "48dp", '48dp'
                        on_active:
                            if self.active: root.piced_pro = 'https'
                            else: root.piced_pro = None
                    MDLabel:
                        font_style: "Overline"
                        text: "HTTPS"
                        # font_size: 12
                        color: app.theme_cls.text_color
                
                MDBoxLayout:
                    size_hint: .4, None
                    # size: 90, 1
                    adaptive_height: True
                    MDCheckbox:
                        id: pro_socks4
                        group: "style_protocol"
                        size_hint: None, None
                        size: "48dp", '48dp'
                        on_active:
                            if self.active: root.piced_pro = 'socks4'
                            else: root.piced_pro = None

                    MDLabel:
                        text: "SOCKS4"
                        font_style: "Overline"
                        color: app.theme_cls.text_color

                MDBoxLayout:
                    size_hint: .4, None
                    # size: 90, 1
                    adaptive_height: True
                    MDCheckbox:
                        id: pro_socks5
                        group: "style_protocol"
                        size_hint: None, None
                        size: "48dp", '48dp'
                        on_active:
                            if self.active: root.piced_pro = 'socks5'
                            else: root.piced_pro = None
                    MDLabel:
                        text: "SOCKS5"
                        font_style: "Overline"
                        color: app.theme_cls.text_color

            MDBoxLayout:
                adaptive_height: True
                spacing: 15
                MDBoxLayout:
                MDRectangleFlatButton:
                    text: "close".upper()
                    on_release:root.dismiss()
                MDRaisedButton:
                    text: "Save".upper()
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, .8
                    on_release:
                        root.inputedproxysSave() if root.piced_pro and query.text else toast("Error: Some things is wrong!.\nFill correctly!!")
                MDBoxLayout:
