                                bold: True
                                theme_text_color: "Hint"
                                font_style: "Overline"
                                halign: "center"
                                # theme_text_color: "Primary"
                            MDLabel:
                                id: lastScan
                                size_hint_x: .2
                                #pos_hint: {"center_y": .35}
